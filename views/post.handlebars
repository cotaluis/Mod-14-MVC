<article>
  <h2>{{post.title}}</h2>
  <p>By: {{post.username}}</p>
  <p>Date: {{post.createdAt}}</p>
  <p>{{post.contents}}</p>

  <h3>Comments</h3>
  {{#if comments.length}}
    <ul>
      {{#each comments}}
        <li>
          <p>{{commentText}}</p>
          <p>By: {{username}}</p>
          <p>Date: {{createdAt}}</p>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>No comments yet.</p>
  {{/if}}

  {{#if user}}
    <form action="/server/routes/postRoutes.js" method="post">
      <label for="commentText">Add a Comment:</label>
      <textarea id="commentText" name="commentText" required></textarea>
      <button type="submit">Submit Comment</button>
    </form>
  {{/if}}
</article>
